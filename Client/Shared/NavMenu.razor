<MudNavMenu Class="mud-width-full">
    <MudDivider Class="mb-1" />

    
    <AuthorizeView Roles="Administrator">
        <Authorized>
            <MudText Typo="Typo.body2" Class="px-4 fw-bold">@context.User.Identity.Name</MudText>
            <MudText Typo="Typo.body2" Class="px-4 text-muted">Administrator</MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/admin-dashboard" Icon="fas fa-chart-line">Dashboard</MudNavLink>
            <MudNavLink Href="/admin-usermanagement" Icon="fas fa-users">User Management</MudNavLink>
        </Authorized>       
    </AuthorizeView>
    <AuthorizeView Roles="HR">
        <MudText Typo="Typo.body2" Class="px-4 fw-bold">@context.User.Identity.Name</MudText>
        <MudText Typo="Typo.body2" Class="px-4 text-muted">Human Resource</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/dashboard" Icon="fas fa-chart-line">Dashboard</MudNavLink>
        <MudNavLink Href="/servers" Icon="fas fa-server">Employee Management</MudNavLink>
        <MudNavGroup Title="Requests" Icon="fas fa-cogs" Expanded="true">
            <MudNavLink Href="/users" Icon="fas fa-users" IconColor="Color.Success">Leave Requests</MudNavLink>
            <MudNavLink Href="/security" Icon="fas fa-user-shield" IconColor="Color.Info">COE Requests</MudNavLink>
        </MudNavGroup>
    </AuthorizeView>
    <AuthorizeView Roles="Hotel">
        <MudText Typo="Typo.body2" Class="px-4 fw-bold">@context.User.Identity.Name</MudText>
        <MudText Typo="Typo.body2" Class="px-4 text-muted">Front Desk</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/dashboard" Icon="fas fa-chart-line">Dashboard</MudNavLink>
        <MudNavLink Href="/billing" Icon="fas fa-receipt" Disabled="true">Billing</MudNavLink>
        <MudNavLink Href="/users" Icon="fas fa-cogs" IconColor="Color.Success">Device Settings</MudNavLink>
    </AuthorizeView>
</MudNavMenu>

