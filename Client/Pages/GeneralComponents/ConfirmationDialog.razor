<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help"></MudIcon>
            Confirm Action
        </MudText>
    </TitleContent>
    <DialogContent>
        @Action
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => OnSubmit(false))">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => OnSubmit(true))">Confirm</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Action { get; set; }

    private void OnSubmit(bool choice)
    {
        if (choice)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            MudDialog.Close(DialogResult.Ok(false));
        }
    }
    
}