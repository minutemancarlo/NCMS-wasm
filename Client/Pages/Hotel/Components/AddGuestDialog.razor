@using NCMS_wasm.Shared
@using NCMS_wasm.Client.Pages.Validations
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="fas fa-users"></MudIcon>
            Add Walk In Guest
        </MudText>
    </TitleContent>
    <DialogContent>
        @* <MudForm @ref="form" Model="@rfidInfo" Validation="@(modelValidator.ValidateValue)" ValidationDelay="0"> *@
        <MudForm @ref="form" Model="@guestsInfo">                     
            <MudStack Row>
                <MudTextField @bind-Value="guestsInfo.FirstName" Label="First Name" Variant="Variant.Outlined"></MudTextField>
                <MudTextField @bind-Value="guestsInfo.MiddleName" Label="Middle Name" Variant="Variant.Outlined"></MudTextField>
                <MudTextField @bind-Value="guestsInfo.LastName" Label="Last Name" Variant="Variant.Outlined"></MudTextField>
            </MudStack>
            <MudTextField @bind-Value="guestsInfo.Phone" Label="Phone Number" Variant="Variant.Outlined"></MudTextField>
            <MudTextField @bind-Value="guestsInfo.Email" Label="Email Address" Variant="Variant.Outlined"></MudTextField>
            <MudStack Row Class="py-1" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap">
                <MudDatePicker Label="Check In" @bind-Date="guestsInfo.CheckInDate" Variant="Variant.Outlined" />
                <MudDatePicker Label="Check Out" @bind-Date="guestsInfo.CheckOutDate" Variant="Variant.Outlined" />
                <MudNumericField @bind-Value="guestsInfo.Rooms" Label="Rooms" Variant="Variant.Outlined" Step="1" Min="1" Max="99" />                
            </MudStack>
            <MudNumericField Class="py-1" @bind-Value="guestsInfo.Children" Label="Rooms" Variant="Variant.Outlined" Step="1" Min="1" Max="99" />
            <MudNumericField Class="py-1"  @bind-Value="guestsInfo.Adults" Label="Rooms" Variant="Variant.Outlined" Step="1" Min="1" Max="99" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudLoadingButton Variant="Variant.Filled"
                          Color="Color.Success"
                          Size="Size.Large"
                          Loading="@(_loading)"                        
                          ButtonType="ButtonType.Button">
            <LoadingContent>Submitting...</LoadingContent>
            <ChildContent>Submit</ChildContent>
        </MudLoadingButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    [Inject] HttpClient? httpClient { get; set; }
    [Inject] ISnackbar Snackbar { get; set; }
    [Inject] IJSRuntime JSRuntime { get; set; }
    MudForm form;
    private GuestsInfo? guestsInfo { get; set; }
    private bool _loading = false;

    private List<GuestsInfo> guestsList = new List<GuestsInfo>();
    
    // private async Task OnSubmit()
    // {
    //     Snackbar.Add($"Card Value: {rfidInfo.CardReference}", Severity.Normal);
    // }

    protected override async Task OnInitializedAsync()
    {
        guestsInfo = new GuestsInfo();
        await base.OnInitializedAsync();
    }

   
   


    void Cancel() => MudDialog.Cancel();
}
